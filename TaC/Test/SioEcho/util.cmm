// ------------------------------- エラー表示 ----------------------------
public void panic(char[] msg, ...) {
  setPri(DI|KERN);				    // 割り込み禁止

#ifdef DEBUG
  int[] args = _args();
  printF("### panic(PID=%d(", getPid());
  int[] fp = _addrAdd(args, -6);
  for (int i=0; i<3; i=i+1) {                       // 関数のトレースを3階層
    printF("<-(%04x)",fp[1]);
    fp = _ItoA(fp[0]);
  }
  printF(")) ###\n");
  printF(msg, args[0], args[1], args[2]);

#else
  putStr(msg);
#endif

  putCh('\n');
  while (true) halt();				    // システムを停止する
}
